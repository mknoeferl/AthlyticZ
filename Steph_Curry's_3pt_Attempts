import numpy as np
import matplotlib.pyplot as plt

# Set random seed for reproducibility
np.random.seed(30)

# Parameters
shots = 100             # Number of 3-point attempts
prob_make = 0.43        # Steph Curry's 3-point percentage
simulations = 10000     # How many times we simulate 100 shots

# Run the simulation
results = np.random.binomial(n=shots, p=prob_make, size=simulations)

# Calculate statistics
avg_makes = np.mean(results)
std_dev = np.std(results)
best_case = np.max(results)
worst_case = np.min(results)

print(f"Average makes out of 100: {avg_makes:.2f}")
print(f"Standard deviation: {std_dev:.2f}")
print(f"Best case in simulation: {best_case} made")
print(f"Worst case in simulation: {worst_case} made")

# Plot histogram of results
plt.figure(figsize=(10,6))
plt.hist(results, bins=20, color="goldenrod", edgecolor="black", alpha=0.7)
plt.axvline(avg_makes, color="red", linestyle="dashed", linewidth=2, label=f"Average = {avg_makes:.1f}")
plt.title("What If Steph Curry Shot 100 Threes?", fontsize=16)
plt.xlabel("Number of Makes")
plt.ylabel("Frequency")
plt.legend()
plt.show()
